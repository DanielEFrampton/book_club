<h2>Books Index</h2>

<% @books.each do |book| %>
  <section id="book-<%= book.id %>">
    <p>
      Title: <%= book.title %><br/>
        <%= "Author".pluralize(book.author_count) %>:
        <% book.authors.each do |author| %>
          <%= link_to author.name, "/authors/#{author.id}" %><%= ", " unless author == book.authors.last %>
        <% end %>
        <br/>
      Publication Year: <%= book.publication_year %><br/>
      Pages: <%= book.pages %>
    </p>
  </section>
<% end %>
